# /etc/mongod.conf (custom mongod configuration file)
# https://docs.mongodb.org/manual/reference/configuration-options/

systemLog:
   destination: file
   path: <%= @logpath %>
   logAppend: true

processManagement:
   fork: true
   pidFilePath: /var/run/mongodb/mongod.pid

net:
   port: 27017

storage:
   dbPath: <%= @dbpath %>
   journal:
      enabled: true

replication:
   replSetName: <%= @replSet %>